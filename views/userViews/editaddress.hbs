{{>userheader}}
<style>
  .container1 {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 120vh;

  }

  .form1 {
    width: 50%;
    padding: 2em;
    background-color: #f7f7f7;
    border-radius: 10px;
    box-shadow: 2px 2px 10px #ccc;

  }

  .form-group {
    margin-bottom: 1em;
  }

  label {
    font-weight: 600;
  }

  .btn-primary {
    width: 100%;
    margin-top: 1em;
  }
</style>


<div class="container container1 mt-5">
  <h2 class="text-center">Edit adress</h2>
  <form class="form1" action="" method="post">
    <div class="form-group">
      <label for="name">Name</label>
      <input type="text" class="form-control" value="{{address.name}}" id="name" name="name">
    </div>
    <div class="form-group">
      <label for="mobile">Mobile</label>
      <input type="text" class="form-control" value="{{address.mobile}}" id="mobile" name="mobile">
    </div>

    <div class="form-group">
      <label for="address1">House number,Street</label>
      <input type="text" class="form-control" value="{{address.address1}}" id="address1" name="address1">
    </div>
    <div class="form-group">
      <label for="address2">Area, Village</label>
      <input type="text" class="form-control" id="address2" value="{{address.address2}}" name="address2">
    </div>
    <div class="form-group">
      <label for="city">city</label>
      <input type="text" class="form-control" id="city" value="{{address.city}}" name="city">
    </div>
    <div class="form-group">
      <label for="state">State</label>
      <input type="text" class="form-control" value="{{address.state}}" id="state" name="state">
    </div>
    <div class="form-group">
      <label for="pin">Pincode</label>
      <input type="number" class="form-control" value="{{address.zip}}" id="zip" name="zip">
    </div>
    <button type="submit" class="btn btn-primary">Add </button>
  </form>

  <button class="btn btn-success"><a class="text-dark" href="/profile">Cancel</a></button>
</div>

{{>userfooter}}