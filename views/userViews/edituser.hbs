                  <input type="tele" name="mobile" id="form1Example1" class="form-control" value="{{userData.mobile}}"
                    required />
                </div>

                <div class="form-outline mb-4">
                  <label for="email">Email</label>
                  <input type="text" name="email" value="{{userData.email}}" id="form1Example1"
                    class="form-control bg-secondary" disabled required />
                </div>
            </div>
            <!-- Submit button -->
            <button type="submit" class="btn btn-primary mx-5">Save Changes</button>
            </form>
            <br>
            <br>
            <p>Click Here to <a href="/profile">Back</a>

          </div>
        </div>
      </div>
    </div>
    </div>
    </div>
