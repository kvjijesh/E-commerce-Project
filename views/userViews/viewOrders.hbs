       <td>{{this.orderBill}}</td>
       <td>
       {{!-- <button  class="detail-button"> <a href="/order-details"></a> VIEW DETAILS</button> --}}
       <a style="text-decoration: none;" class="detail-button" href="/order-details?id={{this._id}}">VIEW DETAILS</a>
</td>
  </tbody>

  {{/each}}




</table>
</div>





</div>




