{{>adminheader}}


 <style>
    body {
      background-color: #f2f2f2;
      font-family: Arial, sans-serif;
    }

    h1 {
      text-align: center;
      margin-top: 2rem;
    }

    form {
      max-width: 600px;
      margin: 0 auto;
      background-color: #fff;
      padding: 2rem;
      border-radius: 5px;
      box-shadow: 0px 0px 5px 0px rgba(0,0,0,0.3);
    }

    div {
      margin-bottom: 1rem;
    }

    label {
      display: block;
      margin-bottom: 0.5rem;
    }

    input, select {
      border: 2px solid #ccc;
      border-radius: 5px;
      padding: 0.5rem;
      font-size: 1rem;
      width: 100%;
      box-sizing: border-box;
    }

    button {
      background-color: #4CAF50;
      color: #fff;
      border: none;
      border-radius: 5px;
      padding: 0.5rem 1rem;
      font-size: 1rem;
      cursor: pointer;
    }

    button:hover {
      background-color: #3e8e41;
    }
  </style>

<div class="container">

<h1>Create a new coupon</h1>

<form action="" method="POST">
  <div>
    <label for="code">Code:</label>
    <input type="text" id="code" name="code" value="{{coupon.code}}" >
  </div>
  <div>
    <label for="value">Value:</label>
    <input type="number" id="value" name="value" min="0" value="{{coupon.value}}" >
  </div>
  <div>
    <label for="minBill">Minimum bill amount:</label>
    <input type="number" id="minBill" name="minBill" min="0" value="{{coupon.minBill}}">
  </div>
  <div>
    <label for="expiryDate">Expiry date:</label>
    <input type="date" id="expiryDate" name="expiryDate" value="{{coupon.expiryDate}}" >
  </div>
  <div>
    <label for="status">Status:</label>
    <select id="status" name="status">
      <option value="active">Active</option>
      <option value="expired">Expired</option>
      <option value="inactive">Inactive</option>
    </select>
  </div>
  <button type="submit">UPDATE</button>
</form>




</div>
<script>
  function validateForm() {
    var code = document.getElementById("code").value;
    var value = document.getElementById("value").value;
    var minBill = document.getElementById("minBill").value;
    var expiryDate = document.getElementById("expiryDate").value;

    if (code == "") {
      alert("Please enter a code.");
      return false;
    }

    if (value == "") {
      alert("Please enter a value.");
      return false;
    }

    if (minBill == "") {
      alert("Please enter a minimum bill amount.");
      return false;
    }
   /* var currentDate = new Date().toISOString().slice(0,10);
    if (expiryDate < currentDate) {
      alert("Please enter a future expiry date.");
      return false;
    }*/

    return true;
  }

  document.querySelector('form').addEventListener('submit', function(e) {
    e.preventDefault();
    if (validateForm()) {
      this.submit();
    }
  });
</script>