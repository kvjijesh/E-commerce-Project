{{>adminheader}}
<div class="container mt-3 text-center table-responsive">
  <h2>Products</h2>
  <table class="table table-striped table-primary ">
    <thead>
      <tr>


        <th scope="col">Name</th>
        <th scope="col">Description</th>
        <th scope="col">Price</th>
        <th scope="col">image</th>
        <th scope="col">category</th>
        <th scope="col">Stock</th>
        <th scope="col">Blocked</th>

        <th scope="col">Action</th>

      </tr>
    </thead>
    {{#each products}}
    <tbody>
      <tr>

        <td>{{this.name}}</td>
        <td>{{this.description}}</td>
        <td>{{this.price}}</td>
        <td><img style="width: 30px;" src="/images/{{this.image.[0]}}" alt="Hi"></td>
        <td>{{this.category.name}}</td>
        <td>{{this.stock}}</td>
        <td>{{this.is_blocked}}</td>
        <td>
          <a class="btn btn-success px-4 py-2 m-1" href="/admin/product/edit/{{this._id}}">Edit </a>
          {{#if this.is_blocked}}
          <a class="btn btn-success px-3 py-2 m-1" href="/admin/product/block/{{this._id}}">Unblock </a>
          {{else}}
          <a class="btn btn-danger px-3 py-2 m-1" href="/admin/product/block/{{this._id}}">Block </a>
          {{/if}}
        </td>

      </tr>

    </tbody>
    {{/each}}
  </table>
  <a class='btn btn-success ml-auto' href="/admin/product/addproduct" type="submit">Add Product</a>
</div>




<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
