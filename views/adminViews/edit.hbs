{{>adminheader}}
<style>
  * {
    font-family: 'Roboto', sans-serif;
  }

  .container {
    padding: 100px;
  }

  .card {
    background-color: rgb(85, 182, 182);
    border-radius: 15px;
    box-shadow: 0px 0px 10px 0px rgba(0, 0, 0, 0.1);
  }

  h2 {
    font-size: 36px;
    margin-bottom: 50px;
    text-align: center;
  }

  form {
    margin-top: 50px;
  }

  label {
    font-weight: 700;
    margin-bottom: 10px;
    display: block;
  }

  input,
  textarea {
    width: 100%;
    padding: 10px;
    font-size: 18px;
    border-radius: 5px;
    border: none;
    margin-bottom: 20px;
    box-shadow: 0px 0px 5px 0px rgba(0, 0, 0, 0.1);
  }

  button {
    width: 150px;
    padding: 10px;
    font-size: 18px;
    border-radius: 5px;
    border: none;
    background-color: darkcyan;
    color: white;
    margin-top: 20px;
    cursor: pointer;
  }
</style>

</head>

<body>
  <section class="vh-100%" style="background: rgb(195, 222, 222);" <div
    class="mask d-flex align-items-center h-100 gradient-custom-3">
    <div class="container h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-9 col-lg-7 col-xl-6">
          <div class="card" style="border-radius: 15px;">
            <div class="card-body p-5">
              <h2 class="text-uppercase text-center mb-5">Edit Products</h2>

              <form action="" method="post" enctype="multipart/form-data">
                <div class="form-outline mb-4">
                  <label for="name">Name</label>
                  <input type="text" name="name" id="form1Example1" class="form-control" value="{{products.name}}"
                    required />
                </div>
                <div class="form-outline mb-4">
                  <label for="description">Description</label>
                  <input type="text" name="description" id="form1Example1" class="form-control"
                    value="{{products.description}}" required />
                </div>

                <div class="form-outline mb-4">
                  <label for="price">Price</label>
                  <input type="number" name="price" value="{{products.price}}" id="form1Example1" class="form-control"
                    required />
                </div>
                <div class="form-outline mb-4">
                  <img src="/images/{{products.image.[0]}}" alt="Product image" style="width: 50px;">
                  <input type="file" name="image" id="form1Example1" class="form-control" multiple />
                </div>
                <div class="form-outline mb-4">
                  <label for="category">Category</label>
                  <select name="category" id="form1Example1" class="form-control" required>
                    {{#each category}}
                    <option value="{{this.id}}" {{#if (eq products.category.id this.id)}} selected {{/if}}>
                      {{this.name}}
                    </option>
                    {{/each}}
                  </select>
                </div>
                <div class="form-outline mb-4">
                  <label for="stock">Stock</label>
                  <input type="number" name="stock" value="{{products.stock}}" id="form1Example1" class="form-control"
                    required />
                </div>
                <div class="form-outline mb-4">
                  <label for="status">Blocked</label>
                  <input type="text" name="is_blocked" value="{{products.is_blocked}}" id="form1Example1"
                    class="form-control" required />
                </div>

                <div class="form-outline mb-4">
                  <input type="hidden" name="id" value="{{user._id}}" class="form-control" />

                </div>
            </div>
            <!-- Submit button -->
            <button type="submit" class="btn btn-primary mx-5">Update</button>
            </form>
            <br>
            <br>
            <p>Click Here to <a href="/admin/product">Back</a>

          </div>
        </div>
      </div>
    </div>
    </div>
    </div>
  </section>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
    crossorigin="anonymous"></script>
</body>

</html>