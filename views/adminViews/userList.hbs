{{>adminheader}}
<body>
     <div class="container">
    <div class="text-center center-div mt-0" id="login">
    <div class="container w-100  py-5 mt-1 bg-none">


<h3 class="mt-3 text-primary">User Details</h3><br>
<table class="table table-striped table-primary">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Mobile</th>
      <th scope="col">BLOCK STATUS</th>
      <th scope="col">Action</th>

    </tr>
  </thead>

  <tbody>
    {{#each usersData}}
    <tr>

      <td>{{this.name}}</td>
      <td>{{this.email}}</td>
      <td>{{this.mobile}}</td>
      <td>{{this.is_blocked}}</td>


         {{#if this.is_blocked}}
              <td><a class="btn btn-success" href="/admin/block/{{this._id}}">Ublock </a></td>
              {{else}}
              <td><a class="btn btn-danger" href="/admin/block/{{this._id}}">Block </a></td>

        {{/if}}
    </tr>
    {{/each}}
  </tbody>

</table>
 </div>
</div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
   </div>
  </body>
</html>
