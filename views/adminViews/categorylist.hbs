{{>adminheader}}

<div class="container mt-3">
    <h2>Categories</h2>
  <table class="table table-striped table-primary">
  <thead>
    <tr>


      <th scope="col">Name</th>

      <th scope="col">image</th>


	  <th scope="col">Action</th>

    </tr>
  </thead>
{{#each categories}}
  <tbody>
    <tr>

      <td>{{this.name}}</td>
      <td><img style="width: 50px;" src="{{this.image}}" alt="hi"></td>
      <td>
              <a class="btn btn-success" href="/admin/category/edit/{{this._id}}">Edit </a>

              <a class="btn btn-danger" href="/admin/delete/{{this._id}}" onclick="return confirm('Are you sure you want to delete this item?');">Delete </a>
        </td>

    </tr>

  </tbody>
  {{/each}}
</table>
<div>
    <a class="btn btn-success" href="/admin/category/addcategory">Add Category </a>
</div>

</div>