{{>adminheader}}
    <style>
      .container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 100vh;
      }

      form {
        width: 50%;
        padding: 2em;
        background-color: #f7f7f7;
        border-radius: 10px;
        box-shadow: 2px 2px 10px #ccc;
      }

      .form-group {
        margin-bottom: 1em;
      }

      label {
        font-weight: 600;
      }

      .btn-primary {
        width: 100%;
        margin-top: 1em;
      }
    </style>
  </head>
  <body>
    <div class="container mt-5">
      <h2 class="text-center">Add category</h2>
      <form id="add-category-form" action="" method="post" enctype="multipart/form-data">
        <div class="form-group">
          <label for="name">Name</label>
          <input type="text" class="form-control" id="name" name="name">
           <span style="color:crimson" id="category-error"></span>
        </div>


        <div class="form-group">
          <label for="image">Image</label>
          <input type="file" name="image" id="image" ><br>
          <span style="color:crimson" id="image-error"></span>
        </div>



        <button type="submit" class="btn btn-primary">Add Category</button>
      </form>
      <div>
        <p>{{message}}</p>
      </div>
<button class="btn btn-success"><a class="text-dark" href="/admin/category">Cancel</a></button>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>

<script>
    const addCategoryForm = document.querySelector('#add-category-form');
const categoryInput = document.querySelector('#name');
const imageInput = document.querySelector('#image');
const categoryError = document.querySelector('#category-error');
const imageError = document.querySelector('#image-error');

addCategoryForm.addEventListener('submit', (event) => {
  // Clear any previous error messages
  categoryError.textContent = '';
  imageError.textContent = '';

  // Validate the category field
  if (categoryInput.value.trim() === '') {
    event.preventDefault();
    categoryError.textContent = 'Category is required';
  }

  // Validate the image field
  const allowedMimeTypes = ['image/jpeg', 'image/png', 'image/gif'];
  if (imageInput.files.length === 0) {
    event.preventDefault();
    imageError.textContent = 'Image is required';
  } else if (!allowedMimeTypes.includes(imageInput.files[0].type)) {
    event.preventDefault();
    imageError.textContent = 'Invalid image format';
  }
});

  </script>

  </body>
</html>

